<%= form_for (@user) do |f|%>

<p><%=f.label(:name) %></p>
<p><%=f.text_field(:name)%></p>
<p><%=f.label(:email)%></p>
<p><%=f.text_field(:email)%></p>
<p><%=f.label(:headline)%></p>
<p><%=f.text_field(:headline)%></p>
<p><%=f.label(:profile)%></p>
<p><%=f.text_area(:profile)%></p>
<% if current_user.admin?%>
<p><%=f.label('Admin ?')%></p>
<p><%=f.check_box(:admin)%></p>
<%end%>
<p><%=f.submit%></p>

<%end%>