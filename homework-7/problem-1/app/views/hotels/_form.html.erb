<%= form_for(@hotel,html:{multipart: true}) do |f|%>

<p><%=f.label(:name) %></p>
<p><%=f.text_field(:name)%></p>
<p><%=f.label(:description)%></p>
<p><%=f.text_area(:description)%></p>
<p><%=f.label(:location)%></p>
<p><%=f.text_field(:location)%></p>
<p><%=f.label(:photo)%></p>
<p><%=f.file_field(:photo)%></p>
<% if current_user.admin?%>
<p><%=f.label(:user)%>
<p><%=f.collection_select(:user_id, User.all,:id, :name) %></p>
<%end%>

<p><%=f.submit%></p> 

<%end%>